<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1">

    <TableRow>
        <TextView android:text="用户：" />
        <EditText android:id="@+id/username" android:hint="请输入用户" />
    </TableRow>
    <TableRow>
        <TextView android:text="密码：" />
        <EditText android:id="@+id/password" android:hint="请输入密码"
            android:inputType="textPassword" />
    </TableRow>
    <TableRow>
        <Button android:id="@+id/loginBtn" android:text="登录"
            android:layout_span="2" android:layout_gravity="center_horizontal" />
    </TableRow>
</TableLayout>