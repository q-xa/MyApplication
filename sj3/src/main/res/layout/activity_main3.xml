<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.sj3.MainActivity3"
    android:stretchColumns="*">
    <TableRow>
        <ImageView
            android:src="@drawable/mhy"
            android:layout_span="4"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="用户：" />
        <EditText
            android:id="@+id/username"
            android:hint="长度在5-20个字符之间"
            android:maxLength="20"
            android:layout_span="3"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="密码：" />
        <EditText
            android:id="@+id/password"
            android:hint="密码至少设置6位"
            android:inputType="textPassword"
            android:layout_span="3"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="性别：" />
        <RadioGroup
            android:id="@+id/sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:id="@+id/male"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="男"
                android:checked="true"/>
            <RadioButton
                android:id="@+id/female"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="女"/>
        </RadioGroup>
    </TableRow>
    <TableRow>
        <TextView
            android:text="爱好：" />
        <CheckBox
            android:id="@+id/love1"
            android:text="看小说"
            android:checked="true"/>
        <CheckBox
            android:id="@+id/love2"
            android:text="看电影" />
        <CheckBox
            android:id="@+id/love3"
            android:text="听音乐" />
    </TableRow>
    <TableRow>
        <TextView
            android:text="专业："/>
        <Spinner android:id="@+id/major" android:entries="@array/majors"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="班级："/>
        <Spinner  android:id="@+id/banji" android:layout_span="3"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="入学日期："/>
        <EditText android:id="@+id/selectdate"
            android:cursorVisible="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:hint="请选择日期"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </TableRow>
    <TableRow>
        <TextView
            android:text="个人介绍：" />
        <EditText
            android:id="@+id/jieshao"
            android:hint="输入个人介绍"
            android:inputType="textMultiLine"
            android:minLines="4"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:gravity="top"
            android:layout_span="3"
            android:background="@drawable/textborder"/>
    </TableRow>
    <TableRow>
        <Button
            android:id="@+id/regBtn"
            android:text="注册"
            android:layout_span="4"
            android:layout_gravity="center"/>
    </TableRow>
</TableLayout>